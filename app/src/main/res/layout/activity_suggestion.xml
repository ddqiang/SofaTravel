<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_main_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/activity_suggestion_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="10dp">

        <ImageView
            android:id="@+id/activity_suggestion_title_layout_back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:src="@mipmap/icon_collect" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="意见反馈"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/activity_suggestion_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_suggestion_title_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="问题和意见"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/activity_suggestion_question_content"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/activity_suggestion_question"
        android:layout_margin="10dp"
        android:background="#ffffff">

        <EditText
            android:id="@+id/activity_suggestion_question_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@null"
            android:hint="请描述你的问题" />
    </LinearLayout>

    <TextView
        android:id="@+id/activity_suggestion_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_suggestion_question_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="图片"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/activity_suggestion_question_photo"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_below="@id/activity_suggestion_image"
        android:layout_margin="10dp"
        android:background="#ffffff"
        android:padding="20dp">

        <ImageView
            android:id="@+id/activity_suggestion_show_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/activity_suggestion_add_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/add_photo_background"
            android:src="@mipmap/add_photo_icon" />
    </RelativeLayout>

    <TextView
        android:id="@+id/activity_suggestion_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="#33e9d4"
        android:gravity="center"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="25sp" />
</RelativeLayout>