<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <RelativeLayout
        android:background="#01000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dis_detail_info_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five"
            android:src="@mipmap/topbar_back" />

        <TextView

            android:id="@+id/dis_detail_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five"
            android:layout_toRightOf="@id/dis_detail_info_back"
            android:gravity="center"
            android:text="详情"
            />

        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_margin="@dimen/five"-->
            <!--android:src="@mipmap/icon_spacedetail_share" />-->
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/dis_detail_info_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_banner_twoHundred">

            </com.youth.banner.Banner>

            <TextView
                android:id="@+id/dis_detail_info_share_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="大连14925" />

            <RatingBar
                android:id="@+id/dis_detail_info_ratingbar"
                android:isIndicator="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:rating="2"
                style="@style/RatingBarOne"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ten"
                android:background="@color/discover_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten"
                android:gravity="center"
                android:text="青旅详情" />

            <TextView
                android:id="@+id/dis_detail_info_intro_editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="3"

                />
            <com.amap.api.maps.MapView
                android:id="@+id/dis_info_map"
                android:layout_width="match_parent"
                android:layout_height="100dp">

            </com.amap.api.maps.MapView>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one"
                android:background="@color/discover_gray" />

            <LinearLayout
                android:id="@+id/dis_detail_info_see_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看全部信息"
                    android:textColor="@color/green" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_right_blue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/dis_info_check_in_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/five"
                        android:gravity="center"
                        android:text="@string/check_in" />

                    <TextView
                        android:id="@+id/dis_info_in_time_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="check_in_time"
                        android:textColor="@color/green" />
                </LinearLayout>

                <TextView
                    android:id="@+id/dis_info_sum"
                    android:gravity="center"
                    android:layout_width="@dimen/fifty"
                    android:layout_height="@dimen/twenty"
                    android:layout_margin="@dimen/ten"
                    android:background="@drawable/round"
                    android:text="共1晚"
                    android:textColor="@color/green" />

                <LinearLayout
                    android:id="@+id/dis_info_check_out_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/five"
                        android:gravity="center"
                        android:text="@string/check_out" />

                    <TextView
                        android:id="@+id/dis_info_out_time_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="check_out_time"
                        android:textColor="@color/green" />
                </LinearLayout>


            </LinearLayout>

            <ListView
                android:id="@+id/dis_detail_info_expandable_lv"
                android:layout_width="match_parent"
                android:layout_height="300dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>