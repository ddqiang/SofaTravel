<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/show_fragment_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 首页-->
            <RadioButton
                android:id="@+id/home_tab"
                style="@style/main_aty_tab_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radiobutton_home"
                android:button="@null" />

            <!-- 发现-->

            <RadioButton
                android:id="@+id/discover_tab"
                style="@style/main_aty_tab_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/home_tab"
                android:background="@drawable/radiobutton_discover"
                android:button="@null" />

            <!-- 搜索-->
            <RadioButton
                android:id="@+id/search_tab"
                style="@style/main_aty_tab_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/discover_tab"
                android:background="@drawable/radiobutton_search"
                android:button="@null" />

            <!-- 订单-->
            <RadioButton
                android:id="@+id/order_tab"
                style="@style/main_aty_tab_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/order_tab"
                android:background="@drawable/radiobutton_order"
                android:button="@null" />

            <!-- 我的-->
            <RadioButton
                android:id="@+id/mine_tab"
                style="@style/main_aty_tab_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/radiobutton_mine"
                android:button="@null" />

        </RadioGroup>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/home_tab_text"
                style="@style/main_aty_tab_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_home" />

            <TextView
                android:id="@+id/discover_tab_text"
                style="@style/main_aty_tab_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/home_tab_text"

                android:text="@string/text_discover" />

            <TextView
                android:id="@+id/search_tab_text"
                style="@style/main_aty_tab_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/discover_tab_text"
                android:text="@string/text_search" />

            <TextView
                android:id="@+id/order_tab_text"
                style="@style/main_aty_tab_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/search_tab_text"
                android:text="@string/text_order" />

            <TextView
                android:id="@+id/mine_tab_text"
                style="@style/main_aty_tab_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/text_mine" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
