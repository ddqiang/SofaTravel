<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!---->
    <RelativeLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_tab_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/gay"
                android:gravity="center_horizontal"
                android:text="@string/text_home"/>

            <TextView
                android:textColor="@color/gay"
                android:id="@+id/discover_tab_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/text_discover"/>

            <TextView
                android:textColor="@color/gay"
                android:id="@+id/search_tab_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/text_search"/>

            <TextView
                android:textColor="@color/gay"
                android:id="@+id/order_tab_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/text_order"/>

            <TextView
                android:textColor="@color/gay"
                android:id="@+id/mine_tab_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/text_mine" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 首页-->
                <RadioButton
                    android:id="@+id/home_tab"
                    style="@style/main_aty_tab_margin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/radiobutton_home"
                    android:button="@null"
                    android:gravity="center_horizontal" />

                <!-- 发现-->

                <RadioButton
                    android:id="@+id/discover_tab"
                    style="@style/main_aty_tab_margin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/radiobutton_discover"
                    android:button="@null"
                    android:gravity="center_horizontal" />

                <!-- 搜索-->
                <RadioButton
                    style="@style/main_aty_tab_margin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center_horizontal" />

                <!-- 订单-->
                <RadioButton
                    android:id="@+id/order_tab"
                    style="@style/main_aty_tab_margin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/order_tab"
                    android:layout_weight="1"
                    android:background="@drawable/radiobutton_order"
                    android:button="@null"
                    android:gravity="center_horizontal" />

                <!-- 我的-->
                <RadioButton
                    android:id="@+id/mine_tab"
                    style="@style/main_aty_tab_margin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:background="@drawable/radiobutton_mine"
                    android:button="@null"
                    android:gravity="center_horizontal" />

            </RadioGroup>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tab">

        <FrameLayout
            android:id="@+id/show_fragment_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="true"
            android:fitsSystemWindows="true" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/search_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/text"
        android:layout_centerHorizontal="true"
        android:background="@drawable/radiobutton_search" />

</RelativeLayout>
